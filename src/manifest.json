{
	"applications": {
		"gecko": {
			"id": "gmailbuttons@d.lech",
			"strict_min_version": "68.0",
			"strict_max_version": "68.*"
		}
	},
	"manifest_version": 2,
	"name": "GMail Buttons",
	"version": "1.0.0",
	"author": "David Lechner",
